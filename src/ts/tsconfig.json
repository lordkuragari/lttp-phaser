{
    "version": "1.4.1",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false
    },
    "compileOnSave": false,
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./Game.ts",
        "./app.ts",
        "./data/Constants.ts",
        "./data/ItemDescriptors.ts",
        "./data/Keymap.ts",
        "./data/PlayerInventory.ts",
        "./data/TiledMapData.ts",
        "./effects/Effects.ts",
        "./effects/MapOverlay.ts",
        "./effects/ScreenFlash.ts",
        "./entities/Enemy.ts",
        "./entities/Entity.ts",
        "./entities/Player.ts",
        "./entities/enemies/Guard.ts",
        "./entities/items/WorldItem.ts",
        "./entities/misc/Flower.ts",
        "./entities/misc/Particle.ts",
        "./entities/misc/Smash.ts",
        "./entities/misc/Torch.ts",
        "./fonts/Font.ts",
        "./fonts/Hud.ts",
        "./fonts/ReturnOfGanon.ts",
        "./gui/Dialog.ts",
        "./gui/Hud.ts",
        "./gui/Inventory.ts",
        "./gui/items/EquiptedItem.ts",
        "./gui/items/InventoryCounter.ts",
        "./gui/items/Item.ts",
        "./gui/items/LifeMeter.ts",
        "./gui/items/MagicMeter.ts",
        "./levels/Cave034.ts",
        "./levels/Darkworld.ts",
        "./levels/Level.ts",
        "./levels/Lightworld.ts",
        "./levels/LinksHouse.ts",
        "./math.ts",
        "./states/Boot.ts",
        "./states/Intro.ts",
        "./states/MainMenu.ts",
        "./states/Play.ts",
        "./states/Preloader.ts",
        "./states/State.ts",
        "./utility/Pool.ts",
        "./utility/Save.ts",
        "./utility/Storage.ts"
    ]
}